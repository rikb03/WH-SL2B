@model IEnumerable<Dierentuin.Models.Animal>

@{
    ViewData["Title"] = "Index";
}

<h1>Animals</h1>
<h3>Search:</h3>

<style>
    .search-form {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
        margin-bottom: 20px;
    }
    .search-form label {
        margin-right: 10px;
    }
    .search-form div {
        display: flex;
        align-items: center;
    }
    .search-form input,
    .search-form select {
        margin-left: 10px;
        padding: 5px;
    }
</style>

<form asp-controller="Animals" asp-action="Index" method="get" class="search-form">
    <div>
        <label for="searchString">Name:</label>
        <input type="text" id="searchString" name="searchString" />
    </div>
    <div>
        <label for="species">Species:</label>
        <input type="text" id="species" name="species" />
    </div>
    <div>
        <label for="size">Size:</label>
        <select id="size" name="size">
            <option value="">Select Size</option>
            @foreach (var size in Enum.GetValues(typeof(Dierentuin.Models.Animal.SizeType)))
            {
                <option value="@size">@size</option>
            }
        </select>
    </div>
    <div>
        <label for="dietary">Diet:</label>
        <select id="dietary" name="dietary">
            <option value="">Select Diet</option>
            @foreach (var dietary in Enum.GetValues(typeof(Dierentuin.Models.Animal.DietaryClassType)))
            {
                <option value="@dietary">@dietary</option>
            }
        </select>
    </div>
    <div>
        <label for="activityPattern">ActivityPattern:</label>
        <select id="activityPattern" name="activityPattern">
            <option value="">Select ActivityPattern</option>
            @foreach (var activityPattern in Enum.GetValues(typeof(Dierentuin.Models.Animal.ActivityPatternType)))
            {
                <option value="@activityPattern">@activityPattern</option>
            }
        </select>
    </div>
    <div>
        <label for="prey">Prey:</label>
        <input type="text" id="prey" name="prey" />
    </div>
    <div>
        <label for="securityRequirement">Security Requirement:</label>
        <select id="securityRequirement" name="securityRequirement">
            <option value="">Select Security Requirement</option>
            @foreach (var securityRequirement in Enum.GetValues(typeof(Dierentuin.Models.Enclosure.SecurityLevelType)))
            {
                <option value="@securityRequirement">@securityRequirement</option>
            }
        </select>
    </div>
    <button type="submit">Filter</button>
</form>

<a asp-action="Create">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dietary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityPattern)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpaceRequirement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecurityRequirement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enclosure)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dietary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityPattern)
            </td>
            <td>
                @if (item.Prey != null) 
                {
                @Html.DisplayFor(modelItem => item.Prey)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpaceRequirement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecurityRequirement)
            </td>
            <td>
                @if (item.Category != null) 
                {
                @Html.DisplayFor(modelItem => item.Category.Name)   
                }
            </td>
            <td>
                @if (item.Enclosure != null) 
                {
                @Html.DisplayFor(modelItem => item.Enclosure.Name)
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
