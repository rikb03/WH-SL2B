@model IEnumerable<Dierentuin.Models.Animal>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dietary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityPattern)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpaceRequirement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecurityRequirement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enclosure)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dietary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityPattern)
            </td>
            <td>
                @if (item.Prey != null) 
                {
                @Html.DisplayFor(modelItem => item.Prey)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpaceRequirement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecurityRequirement)
            </td>
            <td>
                @if (item.Category != null) 
                {
                @Html.DisplayFor(modelItem => item.Category.Description)   
                }
            </td>
            <td>
                @if (item.Enclosure != null) 
                {
                @Html.DisplayFor(modelItem => item.Enclosure.Name)
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
