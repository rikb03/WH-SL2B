@model Dierentuin.Models.Animal

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Species)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Species)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dietary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dietary)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityPattern)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActivityPattern)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prey)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prey)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SpaceRequirement)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpaceRequirement)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SecurityRequirement)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecurityRequirement)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Enclosure)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Enclosure.Name)
        </dd>
        @if (ViewBag.Message != null)
        {
                <hr />
            @if (ViewBag.Message is List<string>)
			{
				foreach (string @Result in ViewBag.Message)
				{
					<dd class="col-sm-12">
						@Result
					</dd>
				}
			}
			else
			{
				<dd class="col-sm-12">
					@ViewBag.Message
				</dd>
			}
        }
</div><hr />
<div>
    <a asp-action="Sunrise" asp-route-id="@Model?.Id">Sunrise</a>
    <a asp-action="Sunset" asp-route-id="@Model?.Id">Sunset</a>
    <a asp-action="FeedingTime" asp-route-id="@Model?.Id">Feeding Time</a>
    <a asp-action="CheckConstraint" asp-route-id="@Model?.Id">Check Constraint</a>
</div><hr />
<div>
